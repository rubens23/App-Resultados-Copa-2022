<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/tv_gol_visitante"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="L.Messi 90'"
        android:padding="5dp"
        android:textSize="18sp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_sports_soccer_24"
        app:tint="?android:textColorPrimary"
        app:layout_constraintEnd_toStartOf="@id/tv_gol_visitante"
        app:layout_constraintTop_toTopOf="@id/tv_gol_visitante"
        app:layout_constraintBottom_toBottomOf="@id/tv_gol_visitante"/>

</androidx.constraintlayout.widget.ConstraintLayout>